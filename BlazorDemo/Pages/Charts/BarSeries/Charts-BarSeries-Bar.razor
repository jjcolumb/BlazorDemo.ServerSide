<DemoPageSectionComponent Id="Charts-BarSeries-Bar">
    <ChildContent>
        @switch (BarSeriesType) {
            case ChartType.SideBySideBar:
                <BarChart />
                break;
            case ChartType.StackedBar:
                <StackedBarChart />
                break;
            case ChartType.SideBySideStackedBar:
                <SideBySideStackedBarChart />
                break;
            case ChartType.FullStackedBar:
                <FullStackedBarChart />
                break;
            case ChartType.SideBySideFullStackedBar:
                <SideBySideFullStackedBarChart />
                break;
        }
    </ChildContent>

    <OptionsContent>
        <OptionComboBox Label="Series Type:"
                        T="ChartType"
                        TData="KeyValuePair<string, ChartType>"
                        Data="@BarSeriesTypes"
                        ValueField="Value"
                        TextField="Key"
                        @bind-Value="@BarSeriesType" />
    </OptionsContent>

    @code {
        enum ChartType {
            SideBySideBar,
            StackedBar,
            SideBySideStackedBar,
            FullStackedBar,
            SideBySideFullStackedBar
        }

        static readonly Dictionary<string, ChartType> BarSeriesTypes = new() {
            { "Bar", ChartType.SideBySideBar },
            { "Stacked Bar", ChartType.StackedBar },
            { "Side-by-Side Stacked Bar", ChartType.SideBySideStackedBar },
            { "Full-Stacked Bar", ChartType.FullStackedBar },
            { "Side-by-Side Full-Stacked Bar", ChartType.SideBySideFullStackedBar }
        };

        ChartType BarSeriesType = ChartType.SideBySideBar;
    }
</DemoPageSectionComponent>

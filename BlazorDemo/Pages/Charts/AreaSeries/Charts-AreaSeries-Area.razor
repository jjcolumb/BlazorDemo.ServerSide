<DemoPageSectionComponent Id="Charts-AreaSeries-Area">
    <ChildContent>
        @switch (areaSeriesType) {
            case ChartSeriesType.Area:
                <AreaChart ShowSeriesLabels=showSeriesLabels
                           ShowSeriesPointMarkers=showSeriesPointMarkers/>
                break;
            case ChartSeriesType.StackedArea:
                <StackedAreaChart ShowSeriesLabels=showSeriesLabels
                                  ShowSeriesPointMarkers=showSeriesPointMarkers/>
                break;
            case ChartSeriesType.FullStackedArea:
                <FullStackedAreaChart ShowSeriesLabels=showSeriesLabels
                                      ShowSeriesPointMarkers=showSeriesPointMarkers/>
                break;

        }
    </ChildContent>

    <OptionsContent>
        <OptionComboBox Label="Series Type:"
                        T="ChartSeriesType"
                        TData="KeyValuePair<string, ChartSeriesType>"
                        Data="areaSeriesTypes"
                        ValueField="Value"
                        TextField="Key"
                        @bind-Value="areaSeriesType" />
        <OptionCheckBox T="bool"
                        @bind-Checked="showSeriesPointMarkers"
                        Label="Show Point Markers" />
        <OptionCheckBox T="bool"
                        @bind-Checked="showSeriesLabels"
                        Label="Show Point Labels" />
    </OptionsContent>

    @code {
        static readonly Dictionary<string, ChartSeriesType> areaSeriesTypes = new () {
            { "Area", ChartSeriesType.Area },
            { "Stacked Area" , ChartSeriesType.StackedArea},
            { "Full Stacked Area", ChartSeriesType.FullStackedArea}
        };

        ChartSeriesType areaSeriesType = areaSeriesTypes.First().Value;
        bool showSeriesPointMarkers = false;
        bool showSeriesLabels = false;
    }
</DemoPageSectionComponent>

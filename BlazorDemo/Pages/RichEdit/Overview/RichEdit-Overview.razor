@page "/RichEdit"
@using System.IO;

<DemoPageSectionComponent Id="RichEdit-Overview">
    @inject IDocumentProvider DocumentProvider

    <DxRichEdit DocumentContent="@DocumentContent" CssClass="w-100 ch-720" />

    @code {
        byte[] DocumentContent;

        protected override async Task OnInitializedAsync() {
            DocumentContent = await DocumentProvider.GetDocumentAsync("Example.docx");
            await base.OnInitializedAsync();
        }
    }
</DemoPageSectionComponent>
